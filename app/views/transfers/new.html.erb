<h1>New transfer</h1>

<% form_for(@transfer) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :handler %><br />
    <%= f.text_field :handler_id %>
  </p>
  <p>
    <%= f.label :patron %><br />
    <%= f.text_field :patron_id %>
  </p>
  <p>
    <%= f.label :vial %><br />
    <%= f.text_field :vial %>
  </p>
  <p>
    <%= f.label :slot %><br />
    <%= f.text_field :slot %>
  </p>
  <p>
    <%= f.label :when %><br />
    <%= f.datetime_select :when %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', transfers_path %>